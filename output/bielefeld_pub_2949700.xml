                    <titleInfo>
                        <title>Luang Prabang, a World Heritage Town: UNESCO, Tourism and Rising Chinese Influence</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Phill</namePart>
                        <namePart type="family">Wilcox</namePart>
                        <role>
                            <roleTerm type="code" authority="marcrelator">aut</roleTerm>
                        </role>
