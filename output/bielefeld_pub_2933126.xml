                    <titleInfo>
                        <title>Optimal stopping under $\textit{G}$-expectation</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Hanwu</namePart>
                        <namePart type="family">Li</namePart>
                        <role>
