                    <titleInfo>
                        <title>Social welfare and wage inequality in search equilibrium with personal contacts</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Anna</namePart>
                        <namePart type="family">Zaharieva</namePart>
                        <role>
