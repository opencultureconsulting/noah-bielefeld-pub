                    <titleInfo>
                        <title>On Cherny&apos;s results in infinite dimensions: a theorem dual to Yamada-Watanabe</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Marco</namePart>
                        <namePart type="family">Rehmeier</namePart>
                        <role>
                            <roleTerm type="code" authority="marcrelator">aut</roleTerm>
                        </role>
                    </name>
                    <typeOfResource>text</typeOfResource>
                    <genre authority="dini">article</genre>
