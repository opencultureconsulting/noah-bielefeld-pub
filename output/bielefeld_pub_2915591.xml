                    <titleInfo>
                        <title>Export vs. FDI: Sandwich Sorting with Quadratic Preferences</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Niklas</namePart>
                        <namePart type="family">Herzig</namePart>
                        <role>
                            <roleTerm type="code" authority="marcrelator">aut</roleTerm>
                        </role>
                    </name>
