                    <titleInfo>
                        <title>Learning to play best response in duopoly games</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Jan</namePart>
                        <namePart type="family">Wenzelburger</namePart>
                        <role>
                            <roleTerm type="code" authority="marcrelator">aut</roleTerm>
