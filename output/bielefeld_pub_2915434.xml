                    <titleInfo>
                        <title>Public debt, productive public spending and endogenous growth</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Alfred</namePart>
                        <namePart type="family">Greiner</namePart>
                        <role>
