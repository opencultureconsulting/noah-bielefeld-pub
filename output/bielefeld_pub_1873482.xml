                    <titleInfo>
                        <title>Innovation and Knowledge Spillover with Geographical and Technological Distance in an Agentbased Simulation Model</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Klaus</namePart>
                        <namePart type="family">Wersching</namePart>
                        <role>
                            <roleTerm type="code" authority="marcrelator">aut</roleTerm>
                        </role>
                    </name>
