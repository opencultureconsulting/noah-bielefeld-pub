                    <titleInfo>
                        <title>Suchmaschinentechnologie und Digitale Bibliotheken - Bibliotheken müssen das wissenschaftliche Internet erschließen</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Norbert</namePart>
                        <namePart type="family">Lossau</namePart>
                        <role>
                            <roleTerm type="code" authority="marcrelator">aut</roleTerm>
                        </role>
                    </name>
                    <typeOfResource>text</typeOfResource>
