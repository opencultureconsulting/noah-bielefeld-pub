                    <titleInfo>
                        <title>Learning to predict rationally when beliefs are heterogeneous</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Jan</namePart>
                        <namePart type="family">Wenzelburger</namePart>
                        <role>
