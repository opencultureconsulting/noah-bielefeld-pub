                    <titleInfo>
                        <title>Representation of TU games by coalition production economies</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Tomoki</namePart>
                        <namePart type="family">Inoue</namePart>
                        <role>
                            <roleTerm type="code" authority="marcrelator">aut</roleTerm>
                        </role>
                    </name>
                    <typeOfResource>text</typeOfResource>
                    <genre authority="dini">workingPaper</genre>
