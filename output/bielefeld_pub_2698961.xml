                    <titleInfo>
                        <title>Social classifications and inequalities: Ideologies of mobility, care and work in transnational families</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Karolina</namePart>
                        <namePart type="family">Barglowski</namePart>
                        <role>
                            <roleTerm type="code" authority="marcrelator">aut</roleTerm>
                        </role>
                    </name>
