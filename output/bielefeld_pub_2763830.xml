                    <titleInfo>
                        <title>Symmetric equilibria in stochastic timing games</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Jan-Henrik</namePart>
                        <namePart type="family">Steg</namePart>
                        <role>
