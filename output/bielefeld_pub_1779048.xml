                    <titleInfo>
                        <title>Strukturelle Veränderungen in der Ökonomie von Haushalten und Dorfgemeinschaften in Samoa</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Werner</namePart>
                        <namePart type="family">Hennings</namePart>
