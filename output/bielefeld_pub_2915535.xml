                    <titleInfo>
                        <title>Credit Constrained R&amp;D Spending and Technological Change</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Pascal</namePart>
                        <namePart type="family">Aßmuth</namePart>
