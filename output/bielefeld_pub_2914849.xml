                    <titleInfo>
                        <title>Visual tilt estimation for planar-motion methods in indoor mobile robots</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">David Roman</namePart>
                        <namePart type="family">Fleer</namePart>
                        <role>
