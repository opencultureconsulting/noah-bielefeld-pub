                    <titleInfo>
                        <title>Sensitivity of Halobacterium salinarium to attractant light stimuli does not change periodically</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Ulrich</namePart>
                        <namePart type="family">Krohs</namePart>
                        <role>
                            <roleTerm type="code" authority="marcrelator">aut</roleTerm>
                        </role>
                    </name>
