                    <titleInfo>
                        <title>Prioritization in visual working memory enhances memory retention and speeds up processing in a comparison task</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Christian H.</namePart>
                        <namePart type="family">Poth</namePart>
                        <role>
                            <roleTerm type="code" authority="marcrelator">aut</roleTerm>
                        </role>
                    </name>
                    <typeOfResource>text</typeOfResource>
                    <genre authority="dini">article</genre>
                    <originInfo>
