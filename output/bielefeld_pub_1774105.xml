                    <titleInfo>
                        <title>Dynamic properties of two control systems underlying visually guided turning in house-flies</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Martin</namePart>
                        <namePart type="family">Egelhaaf</namePart>
                        <nameIdentifier type="orcid" typeURI="http://orcid.org">0000-0002-9336-4270</nameIdentifier>
