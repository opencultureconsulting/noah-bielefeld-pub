                    <titleInfo>
                        <title>Social resonance and embodied coordination in face-to-face conversation with artificial interlocutors</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Stefan</namePart>
                        <namePart type="family">Kopp</namePart>
                        <nameIdentifier type="orcid" typeURI="http://orcid.org">0000-0002-4047-9277</nameIdentifier>
