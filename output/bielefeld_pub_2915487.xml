                    <titleInfo>
                        <title>Government debt and aggregate stability with endogenous growth: Some general results</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Alfred</namePart>
                        <namePart type="family">Greiner</namePart>
                        <role>
                            <roleTerm type="code" authority="marcrelator">aut</roleTerm>
                        </role>
                    </name>
                    <typeOfResource>text</typeOfResource>
                    <genre authority="dini">workingPaper</genre>
