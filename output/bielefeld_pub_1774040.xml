                    <titleInfo>
                        <title>Arousal enhances [14C]2-deoxyglucose uptake in four forebrain areas of the zebra finch</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Hans-Joachim</namePart>
                        <namePart type="family">Bischof</namePart>
