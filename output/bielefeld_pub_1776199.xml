                    <titleInfo>
                        <title>Über Eigenwerteinschließungen mit Hilfe von Gerschgorin-Kreisen</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Ludwig</namePart>
                        <namePart type="family">Elsner</namePart>
                        <role>
                            <roleTerm type="code" authority="marcrelator">aut</roleTerm>
                        </role>
                    </name>
                    <typeOfResource>text</typeOfResource>
                    <genre authority="dini">article</genre>
