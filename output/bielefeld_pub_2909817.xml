                    <titleInfo>
                        <title>Interjurisdictional tax competition, provision of two local public goods, and environmental policy</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Thorsten</namePart>
                        <namePart type="family">Upmann</namePart>
                        <role>
                            <roleTerm type="code" authority="marcrelator">aut</roleTerm>
                        </role>
                    </name>
