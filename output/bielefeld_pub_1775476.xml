                    <titleInfo>
                        <title>Zur Darstellung und Untersuchung von Funktionen im Mathematikunterricht mittels elektronischer Analogrechner</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Peter</namePart>
                        <namePart type="family">Rasfeld</namePart>
                        <role>
                            <roleTerm type="code" authority="marcrelator">aut</roleTerm>
