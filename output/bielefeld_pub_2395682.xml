                    <titleInfo>
                        <title>Sex, food and conflicts: nutrition dependent nuptial feeding and pre-mating struggles in scorpionflies</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Leif</namePart>
                        <namePart type="family">Engqvist</namePart>
