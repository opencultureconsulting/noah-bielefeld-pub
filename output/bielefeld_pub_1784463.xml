                    <titleInfo>
                        <title>Scaling of pseudocritical couplings in two-flavor QCD</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Frithjof</namePart>
                        <namePart type="family">Karsch</namePart>
                        <role>
