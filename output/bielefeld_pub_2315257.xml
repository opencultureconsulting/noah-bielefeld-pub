                    <titleInfo>
                        <title>Learning in linear models with expectational leads</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Jan</namePart>
                        <namePart type="family">Wenzelburger</namePart>
                        <role>
