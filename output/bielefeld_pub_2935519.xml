                    <titleInfo>
                        <title>Transportless equilibration in isolated many-body quantum systems</title>
                    </titleInfo>
                    <name type="personal">
                        <namePart type="given">Peter</namePart>
                        <namePart type="family">Reimann</namePart>
                        <role>
                            <roleTerm type="code" authority="marcrelator">aut</roleTerm>
                        </role>
                    </name>
